{
  "name": "@agentic-codeflow/cli",
  "version": "0.10.8",
  "description": "CLI for Agentic CodeFlow AI-assisted development workflows",
  "type": "module",
  "bin": {
    "codeflow": "./codeflow-0.10.8.js"
  },
  "keywords": [
    "cli",
    "ai",
    "development",
    "workflow",
    "automation",
    "agent",
    "mcp",
    "claude",
    "opencode"
  ],
  "homepage": "https://github.com/ferg-cod3s/codeflow",
  "repository": {
    "type": "git",
    "url": "https://github.com/ferg-cod3s/codeflow.git"
  },
  "bugs": {
    "url": "https://github.com/ferg-cod3s/codeflow/issues"
  },
  "author": "ferg.cod3s <john.ferguson@jferguson.info>",
  "license": "MIT",
  "files": [
    "src",
    "mcp",
    "agent",
    "codeflow-agents",
    "deprecated/",
    "command",
    "config.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "install": "bun link",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "mcp:server": "bun run mcp/codeflow-server.mjs",
    "mcp:dev": "bun run --watch mcp/codeflow-server.mjs",
    "server": "bun run src/cli/index.ts server start",
    "server:dev": "bun run --watch src/cli/index.ts server start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "validate:agents": "node scripts/validate-agent-models.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "changelog:first": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepublishOnly": "bun run typecheck && bun run test && bun run lint || echo \"Lint warnings found but continuing with publish\"",
    "prepack": "bun run typecheck",
    "build:cli": "bun build src/cli/index.ts --target bun",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.36.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "conventional-changelog-angular": "^8.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}