{
  "name": "codeflow-cli",
  "version": "1.0.0",
  "description": "CLI tool to convert base-agents, commands, and skills to OpenCode format",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "codeflow": "dist/cli/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:cli": "tsc && chmod +x dist/cli/index.js",
    "dev": "tsc --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "start": "node dist/cli/index.js",
    "prepublishOnly": "npm run typecheck && npm run build:cli && npm test"
  },
  "keywords": ["cli", "opencode", "agents", "conversion"],
  "author": "CodeFlow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ferg-cod3s/codeflow.git"
  },
  "bugs": {
    "url": "https://github.com/ferg-cod3s/codeflow/issues"
  },
  "homepage": "https://github.com/ferg-cod3s/codeflow",
  "dependencies": {
    "commander": "^11.1.0",
    "yaml": "^2.3.4",
    "glob": "^10.3.10",
    "chalk": "^5.3.0",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1"
  }
}