{
  "name": "codeflow-cli",
  "version": "0.21.0",
  "description": "CLI tool to convert base-agents, commands, and skills to OpenCode format",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "codeflow": "dist/cli/index.js"
  },
  "files": [
    "dist/**/*",
    "plugins/**/*",
    "README.md",
    "LICENSE",
    "PLUGIN_ECOSYSTEM.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:cli": "tsc && chmod +x dist/cli/index.js",
    "build:plugins": "tsc --project plugins/tsconfig.json",
    "dev": "tsc --watch",
    "dev:plugins": "tsc --project plugins/tsconfig.json --watch",
    "test": "bun test",
    "test:plugins": "bun test tests/plugins.test.ts",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:plugins": "tsc --project plugins/tsconfig.json --noEmit",
    "start": "node dist/cli/index.js",
    "prepublishOnly": "npm run typecheck && npm run build:cli && npm test"
  },
  "keywords": ["cli", "opencode", "agents", "conversion", "plugins", "mcp", "anthropic"],
  "author": "CodeFlow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ferg-cod3s/codeflow.git"
  },
  "bugs": {
    "url": "https://github.com/ferg-cod3s/codeflow/issues"
  },
  "homepage": "https://github.com/ferg-cod3s/codeflow",
  "dependencies": {
    "commander": "^11.1.0",
    "yaml": "^2.3.4",
    "glob": "^10.3.10",
    "chalk": "^5.3.0",
    "fs-extra": "^11.1.1",
    "@opencode-ai/plugin": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/fs-extra": "^11.0.4",
    "@types/bun": "^1.2.0",
    "typescript": "^5.3.2"
  }
}