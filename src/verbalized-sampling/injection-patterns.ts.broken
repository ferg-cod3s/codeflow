/**
 * VS Injection Patterns
 *
 * Defines standardized patterns for injecting verbalized sampling into different component types
 */

export interface InjectionPattern {
  name: string;
  description: string;
  placement: 'top' | 'bottom' | 'after-frontmatter' | 'after-heading' | 'replace-section';
  format: 'markdown' | 'yaml' | 'json' | 'code-comment';
  template: string;
  variables: string[];
}

export interface ComponentPattern {
  componentType: 'agent' | 'command' | 'skill';
  patterns: InjectionPattern[];
  defaultPattern: string;
  platformAdapters: {
    opencode: Partial<InjectionPattern>;
    claude: Partial<InjectionPattern>;
    cursor: Partial<InjectionPattern>;
  };
}

